{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "flymd",
  "version": "0.1.2",
  "identifier": "com.flymd",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:5173"
  },
  "app": {
    "security": {
      "csp": "default-src * 'unsafe-inline' 'unsafe-eval' data: blob: filesystem: ws: wss: http: https: ipc: asset:; img-src * data: blob: asset: http: https:; style-src * 'unsafe-inline' blob:; font-src * data: blob:; script-src * 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval' http: https: data: blob:; worker-src * blob: data:; connect-src * ipc: http: https: ws: wss: data: blob: http://ipc.localhost; object-src *; base-uri *; form-action *",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$APP/**",
            "$RESOURCE/**",
            "$DESKTOP/**",
            "$DOCUMENT/**",
            "$DOWNLOAD/**",
            "$PICTURE/**",
            "$HOME/**",
            "**"
          ]
        }
      },
      "capabilities": [
        {
          "identifier": "main-fs-user-files",
          "description": "允许 main 窗口访问用户目录与常见目录的文件系统读写，并使用文件对话框与存储",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "core:window:allow-close",
            "core:window:allow-destroy",
            "dialog:default",
            "dialog:allow-ask",
            "dialog:allow-open",
            "dialog:allow-save",
            "fs:allow-open",
            "fs:allow-create",
            "fs:allow-mkdir",
            "fs:allow-read",
            "fs:allow-read-file",
            "fs:allow-read-text-file",
            "fs:allow-read-dir",
            "fs:allow-exists",
            "fs:allow-stat",
            "fs:allow-watch",
            "fs:allow-rename",
            "fs:allow-remove",
            "fs:allow-copy-file",
            "fs:allow-write",
            "fs:allow-write-file",
            "fs:allow-write-text-file",
            "fs:allow-home-read-recursive",
            "fs:allow-home-write-recursive",
            "fs:allow-desktop-read-recursive",
            "fs:allow-desktop-write-recursive",
            "fs:allow-document-read-recursive",
            "fs:allow-document-write-recursive",
            "fs:allow-download-read-recursive",
            "fs:allow-download-write-recursive",
            "fs:allow-exe-write-recursive",
            "fs:allow-log-write-recursive",
            "fs:allow-appdata-write-recursive",
            "fs:allow-applocaldata-write-recursive",
            "fs:allow-appconfig-write-recursive",
            "store:default",
            "opener:default",
            "opener:allow-open-path",
            {
              "identifier": "opener:allow-open-path",
              "allow": [
                {
                  "path": "$APPLOCALDATA/*"
                }
              ]
            },
            "window-state:default",
            {
              "identifier": "fs:allow-open",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-create",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-mkdir",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-read",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-read-file",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-read-text-file",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-read-dir",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-exists",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-stat",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-watch",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-rename",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-remove",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-copy-file",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-write",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-write-file",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "fs:allow-write-text-file",
              "allow": [
                "**"
              ]
            },
            {
              "identifier": "http:default",
              "allow": [
                "https://**"
              ]
            }
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "飞速MarkDown v0.1.2",
        "width": 960,
        "height": 640,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": false,
        "dragDropEnabled": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": [
          "md",
          "markdown"
        ],
        "role": "Editor",
        "description": "Markdown 文档",
        "mimeType": "text/markdown",
        "name": "Markdown"
      },
      {
        "ext": [
          "pdf"
        ],
        "role": "Viewer",
        "description": "PDF document",
        "mimeType": "application/pdf",
        "name": "PDF"
      }
    ],
    "android": {
      "minSdkVersion": 24,
      "targetSdkVersion": 34,
      "versionCode": 1
    }
  }
}


